<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="0"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="25dp"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/icon_prof"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawable="@drawable/round"
                    android:src="@drawable/neongroup" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans_bold"
                android:text="Neon Group" />


            <android.support.design.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/google_sans_bold"
                android:text="Join"
                android:textColor="#2979FF"
                android:textSize="14dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="3dp"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="#2979FF"
                app:strokeWidth="2dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/icon_dev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawable="@drawable/creator_avatar"
                    android:src="@drawable/creator_avatar" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans_bold"
                android:text="Developer" />


            <android.support.design.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/viewme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/google_sans_bold"
                android:text="View"
                android:textColor="#2979FF"
                android:textSize="14dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="3dp"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="#2979FF"
                app:strokeWidth="2dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
